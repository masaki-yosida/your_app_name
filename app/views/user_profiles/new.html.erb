<h1>New Profile</h1>

<%= form_for @user_profile, url: user_profiles_path, method: :post, html: { multipart: true } do |f| %>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div>
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>

  <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </div>

  <div>
    <%= f.submit 'Create Profile' %>
  </div>
<% end %>

<%= link_to 'Back', tasks_path %>